<!--pages/order/order.wxml-->
<view wx:for="{{orderList}}" wx:key="{{item}}">
    <view class="order_wrap">
        <view class="header">
            <text class="status">{{item.orderStatus}}</text>
            <text class="ordernumber">订单编号：{{item.orderNumber}}</text>
        </view>
        <navigator class="info"  url="../orderDetail/orderDetail">
            <text class="title">{{item.ticket.title}}</text>
            <view class="detail">
                <view class="img">
                    <image src="{{item.ticket.imgsrc}}"  mode="widthFix"/>
                </view>
                <view class="detailInfo">
                    <text class="time">{{item.startTime}}</text>
                    <text >\n</text>
                    <text class="number">价格：￥{{item.ticket.ticketPrice}} * {{item.ticketAmount}}</text>
                    <text >\n</text>
                    <view class="bottomInfo">
                        <text class="totalprice">总价：￥{{item.totalPrice}}</text>
                        <view class="bottomButton">
                        <navigator url="../comment/comment">
                            <button class="comment" size="default" style="height:60rpx;">评价订单</button>
                        </navigator>
                        </view>
                    </view>
                </view>
            </view>
        </navigator>
    </view>
</view>

