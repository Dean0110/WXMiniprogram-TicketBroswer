/* pages/variety/variety.wxss */
/* 导航项 */
.nav{
  /* 里面的元素不进行换行 */
  white-space: nowrap; 
  padding: 5rpx 5rpx;
}
.nav_item{
  padding: 20rpx 35rpx;
  font-size: 30rpx;
  /* 行内块元素 */
  display: inline-block;
  color: rgb(8, 8, 8);
}
.nav_item.active{
  border-bottom: 5rpx solid #de688b;
}

.more_item{
  
  padding-top:20rpx;
  display: flex;
  justify-content: space-between;
}
.more_item .img{
  position: relative;
  flex:2;
}

.img image{
  padding-left: 30rpx;
  border-radius: 20rpx;
  width: 100%;
}
.more_item .information{
  position: relative;
  padding-left: 30rpx;
  flex:4;
  display: flex;
  flex-direction: column;
}
.information text{
  margin-top: 10rpx;
  color: gray;
  font-size: 32rpx;
}
.information .title{
  margin-top: 0rpx;
  color: black;
  font-size: 36rpx;
  font-weight: bold;
}

.information .price{
  color: red;
  font-size: 40rpx;
  position: absolute;
  left: 30rpx;
  bottom: 2rpx;
}

.more_view{
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.474);
  overflow: hidden;
  position: absolute;
  top: 0;
  z-index: 1;
}

.more_content text{
  font-size: 25rpx;
  display: flex;
  justify-content: center;
  margin: auto;
  width: auto;
  height: auto;
}

.more_content{
  width: 20%;
  height: 15%;
  background-color:white;
  display: flex;
  align-items: center;
  flex-direction: column;
  position: absolute;
  top: 100rpx;
  left: 60rpx;
  border-radius: 20rpx;
  z-index: 2;
}