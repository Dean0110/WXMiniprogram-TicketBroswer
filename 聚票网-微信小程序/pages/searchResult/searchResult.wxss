.searchResult{}
.title{
    margin:20rpx;
    display: flex;
    justify-content: space-around;
}
.title input{
    width: 500rpx;
    padding-left: 10rpx;
    border: 5rpx solid #666;
    border-radius: 30rpx;
}
.title text{
    color:black;
}

.list{}

.info{
    display: flex;
    justify-content: space-between;
    padding:10rpx;
    margin-top: 10rpx;
}

.img{
    flex:3;
    
}

.img image{
    width: 90%;
}

.info .detail{
    flex:7;
    display: flex;
    flex-direction: column;
}

.Title{
    color:rgb(31, 32, 34);
    font-weight: bolder;
}

.date,.place{
    padding-top: 5rpx;
    font-size: 28rpx;
}
.price{
    color: rgb(255, 1, 111);
    font-size: 40rpx;
    font-weight: bold;
}