                <text class="name">备注：</text>
                <input bindinput="getBeizhu" placeholder="备注信息" class="beizhuInfo"></input>
            </view>
            <view class="count">
                <text class="name">数量：</text>
                <input bindinput="getCount" placeholder="数量" class="countInfo"></input>
            </view>
        </view>
