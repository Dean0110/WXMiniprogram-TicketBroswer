<!--pages/deliveryAddress/deliveryAddress.wxml-->
<view id="addressModify">
  <view class="previous">
    <text class="old">原有地址：</text>
    <text id="formerAddress">{{userInfo.address}}</text>
  </view>
  <view class="correct">
    <text >修改地址：</text>
    <input bindinput="newAddress" id="newAddress" type="text" placeholder="请输入新地址"></input>
  </view>
  
  <image mode="widthFix" bindtap="submitAddress" src="../../img/icon/tijiao.png"></image>
  
</view>

