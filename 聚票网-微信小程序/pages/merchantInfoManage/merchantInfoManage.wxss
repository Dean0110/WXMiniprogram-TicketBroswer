/* pages/merchantInfoManage/merchantInfoManage.wxss */

.list-wrapper {
  width: 100%;
}

.div-line{
  background: #E0E3DA;
  width: 100%;
  height: 3rpx;
}
.merchantinfo {
  width: fit-content;
  height: fit-content;
  margin: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.merchantinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  align-items: center;
}

.merchantinfo-nickname {
  color: #aaa;
}

.merchantinfo-item {
  display: flex;
  margin: 20rpx;
  justify-content: start;
}

.merchantitem-image{
  width: 60rpx;
  height: 60rpx;
  margin-left: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.merchantitem-text{
  color: #aaa;
  margin-left: 30rpx;
}

.merchantitem-array{
  color: #aaa;
  position: fixed;
  right: 30rpx;
}

.myTabbar{
  background-color: white;
  width: 100%;
  height: 120rpx;
  position: fixed;
  bottom: 0rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.littleTabbar{
  display: flex;
  flex-direction: column;
  margin: auto;
  align-items: center;
}

.littleTabbar image{
  width: 64rpx;
  height: 64rpx;
}

.littleTabbar text{
  font-size: 30rpx;
  text-align: center;
}
